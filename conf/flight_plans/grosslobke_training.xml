<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="170" ground_alt="68" lat0="52.26483" lon0="9.99394" max_dist_from_home="1500" name="Gross Lobke Demo" qfu="270" security_height="92">
  <header>
#include "subsystems/navigation/bomb.h"
#include "subsystems/navigation/nav_line.h"
#include "datalink.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="15.0" y="5.0"/>
    <waypoint name="1" x="-180." y="35."/>
    <waypoint name="2" x="163.1" y="15.6"/>
    <waypoint name="C" x="20.1" y="20.6"/>
    <waypoint name="CR" x="0.0" y="160.0"/>
    <waypoint name="S1" x="-200" y="-200"/>
    <waypoint name="S2" x="300" y="400"/>
    <waypoint alt="170.0" name="START" x="-180" y="-0.0"/>
    <waypoint alt="220.0" name="PROFILE" x="32.6" y="90.9"/>
    <waypoint alt="68.0" name="TD" x="-2.3" y="18.2"/>
    <waypoint alt="120.0" name="AF" x="170.0" y="45.0"/>
    <waypoint alt="120.0" name="BASELEG" x="40." y="-130."/>
    <waypoint alt="120.0" name="_BASELEG" x="40." y="-130."/>
    <waypoint alt="120.0" name="RELEASE" x="40." y="-110."/>
    <waypoint alt="160.0" name="CLIMB" x="40." y="-90."/>
  </waypoints>
  <blocks>
    <block name="start" group="home">
      <set value="0" var="launch"/>
      <set value="0" var="estimator_flight_time"/>
      <attitude pitch="45" roll="0" throttle="0.99" until="(estimator_z > ground_alt+50)" vmode="throttle"/>
      <go approaching_time="1" wp="START"/>
    </block>
    <block name="wait" strip_button="wait" group="home">
      <circle radius="nav_radius" wp="CR"/>
    </block>
    <block name="flight" strip_button="flight">
     <circle radius="nav_radius" wp="PROFILE" until="NavCircleCount()>2"/>
    </block>
    <block name="timed_line">
      <exception cond="block_time > 360" deroute="wait"/>
      <call fun="nav_line_init()"/>
      <call fun="nav_line(WP_1, WP_2, nav_radius)"/>
      <deroute block="wait"/>
    </block>
    <block name="survey">
      <survey_rectangle grid="150" wp1="S1" wp2="S2"/>
    </block>
    <block name="profile_up" strip_button="Profile Up" strip_icon="up_profile.png" group="profile">
      <set value="ground_alt+100" var="waypoints[WP_PROFILE].a"/>
      <circle radius="nav_radius" wp="PROFILE"/>
    </block>
    <block name="profile_down" strip_button="Profile Down" strip_icon="down_profile.png" group="profile">
      <circle radius="nav_radius" wp="PROFILE" vmode="throttle" throttle="0" pitch="(-1)"  until="(ground_alt+100 > estimator_z)"/>
    <deroute block="profile_up"/>
    </block>
    <block name="Line Circles" strip_button="circles">
      <for from="1" to="3" var="i">
        <set value="$i*200*cos(RadOfDeg(custom_angle))-cos(RadOfDeg(custom_angle))*nav_radius" var="waypoints[WP_C].x"/>
        <set value="$i*200*sin(RadOfDeg(custom_angle))+sin(RadOfDeg(custom_angle))*nav_radius" var="waypoints[WP_C].y"/>
        <go hmode="route" wp="C"/>
        <set value="$i*200*cos(RadOfDeg(custom_angle))" var="waypoints[WP_C].x"/>
        <set value="$i*200*sin(RadOfDeg(custom_angle))" var="waypoints[WP_C].y"/>
        <circle radius="nav_radius" until="NavCircleCount()>2" wp="C"/>
      </for>
      <deroute block="wait"/>
    </block>
    <block name="profile_up_200m_spacing" strip_button="Prof200">
      <for from="50" to="50" var="my_diff">
       <for from="1" to="3" var="i">
        <set value="ground_alt+$i*$my_diff" var="waypoints[WP_PROFILE].a"/>
        <circle radius="nav_radius" wp="PROFILE" until="estimator_z>ground_alt-10+$i*$my_diff"/>
        <circle radius="nav_radius" wp="PROFILE" until="NavCircleCount()>1.5"/>
       </for>
      </for>
      <deroute block="profile_down"/>
    </block>
    <block name="Line 1-2" strip_button="Line (wp 1-2)" strip_icon="line.png">
      <call fun="nav_line_init()"/>
      <call fun="nav_line(WP_1, WP_2, nav_radius)"/>
    </block>
    <block name="Oval 1-2" strip_button="Oval (wp 1-2)" strip_icon="oval.png">
      <oval p1="1" p2="2" radius="nav_radius"/>
    </block>
    <block name="Survey S1-S2 NS" strip_button="Survey (wp S1-S2) NS" strip_icon="survey.png">
      <survey_rectangle grid="150" wp1="S1" wp2="S2"/>
    </block>
    <block name="Survey S1-S2 WE" strip_button="Survey (wp S1-S2) WE" strip_icon="survey_we.png">
      <survey_rectangle grid="150" orientation="WE" wp1="S1" wp2="S2"/>
    </block>
    <block name="Figure 8 around wp 1" strip_button="Figure 8 (wp 1-2)" strip_icon="eight.png">
      <eight center="1" radius="nav_radius" turn_around="2"/>
    </block>
    <block name="down" strip_button="Down" strip_icon="downdown.png">
      <set value="LATERAL_MODE_ROLL" var="lateral_mode"/>
      <set value="V_CTL_MODE_MANUAL" var="v_ctl_mode"/>
      <set value="TRUE" var="h_ctl_disabled"/>
      <set value="(-0.6*MAX_PPRZ)" var="h_ctl_aileron_setpoint"/>
      <set value="(0.9*MAX_PPRZ)" var="h_ctl_elevator_setpoint"/>
      <attitude roll="0.0" throttle="0.0" until="estimator_z > ground_alt + 220" vmode="throttle"/>
      <!--while cond="estimator_z > ground_alt + 220"/-->
      <set value="0" var="h_ctl_aileron_setpoint"/>
      <set value="0" var="h_ctl_elevator_setpoint"/>
    </block>
    <block name="down_end" strip_button="DownEnd" strip_icon="downdownend.png">
      <set value="0" var="h_ctl_aileron_setpoint"/>
      <set value="0" var="h_ctl_elevator_setpoint"/>
      <while cond="1.> stage_time"/>
      <set value="FALSE" var="h_ctl_disabled"/>
      <deroute block="wait"/>
    </block>
    <block name="Land Right AF-TD" strip_button="Land right (wp AF-TD)" strip_icon="land-right.png">
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block name="Land Left AF-TD" strip_button="Land left (wp AF-TD)" strip_icon="land-left.png">
      <set value="-DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block name="land">
      <call fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10) && 20 > fabs(estimator_z - WaypointAlt(WP__BASELEG))" wp="_BASELEG"/>
    </block>
    <block name="final">
      <exception cond="ground_alt + 10 > estimator_z" deroute="flare"/>
      <go from="AF" hmode="route" vmode="glide" wp="TD"/>
    </block>
    <block name="flare">
      <go approaching_time="0" from="AF" hmode="route" throttle="0.0" vmode="throttle" wp="TD"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
